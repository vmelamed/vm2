<?xml version="1.0" encoding="utf-8"?>
<!-- (a, b) => ((a + b) * 42) -->
<expression
    xmlns="urn:schemas-vm-com:Linq.Expressions.Serialization.Xml"
    xmlns:i="http://www.w3.org/2001/XMLSchema-instance">
    <lambda
        type="int">
        <parameters>
            <parameterDefinition
                type="int"
                name="a"
                id="P1" />
            <parameterDefinition
                type="int"
                name="b"
                id="P2" />
        </parameters>
        <body>
            <multiply
                type="int">
                <add
                    type="int">
                    <parameter
                        type="int"
                        name="a"
                        idref="P1" />
                    <parameter
                        type="int"
                        name="b"
                        idref="P2" />
                </add>
                <constant>
                    <!-- 42 -->
                    <int>42</int>
                </constant>
            </multiply>
        </body>
    </lambda>
</expression>