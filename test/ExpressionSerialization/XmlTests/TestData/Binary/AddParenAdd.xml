<?xml version="1.0" encoding="utf-8"?>
<!-- (a, b, c) => (a + (b + c)) -->
<expression
    xmlns="urn:schemas-vm-com:Linq.Expressions.Serialization.Xml"
    xmlns:i="http://www.w3.org/2001/XMLSchema-instance">
    <lambda
        type="int">
        <parameters>
            <parameter
                type="int"
                id="P1"
                name="a" />
            <parameter
                type="int"
                id="P2"
                name="b" />
            <parameter
                type="int"
                id="P3"
                name="c" />
        </parameters>
        <body>
            <add
                type="int">
                <parameter
                    type="int"
                    id="P1"
                    name="a" />
                <add
                    type="int">
                    <parameter
                        type="int"
                        id="P2"
                        name="b" />
                    <parameter
                        type="int"
                        id="P3"
                        name="c" />
                </add>
            </add>
        </body>
    </lambda>
</expression>