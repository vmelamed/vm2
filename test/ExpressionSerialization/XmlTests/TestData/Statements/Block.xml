<?xml version="1.0" encoding="utf-8"?>
<!-- (a, b) => {var d; ... } -->
<expression
    xmlns="urn:schemas-vm-com:Linq.Expressions.Serialization.Xml"
    xmlns:i="http://www.w3.org/2001/XMLSchema-instance">
    <lambda
        type="int">
        <parameters>
            <parameter
                type="int"
                id="P1"
                name="a" />
            <parameter
                type="int"
                id="P2"
                name="b" />
        </parameters>
        <body>
            <block>
                <variables>
                    <parameter
                        type="int"
                        id="P3"
                        name="d" />
                </variables>
                <assign
                    type="int">
                    <parameter
                        type="int"
                        id="P3"
                        name="d" />
                    <constant>
                        <int>42</int>
                    </constant>
                </assign>
                <addAssign
                    type="int">
                    <parameter
                        type="int"
                        id="P1"
                        name="a" />
                    <parameter
                        type="int"
                        id="P3"
                        name="d" />
                </addAssign>
                <subtractAssign
                    type="int">
                    <parameter
                        type="int"
                        id="P1"
                        name="a" />
                    <parameter
                        type="int"
                        id="P2"
                        name="b" />
                </subtractAssign>
                <parameter
                    type="int"
                    id="P4"
                    name="c" />
                <assign
                    type="int">
                    <parameter
                        type="int"
                        id="P4"
                        name="c" />
                    <constant>
                        <int>2</int>
                    </constant>
                </assign>
                <leftShiftAssign
                    type="int">
                    <parameter
                        type="int"
                        id="P1"
                        name="a" />
                    <parameter
                        type="int"
                        id="P4"
                        name="c" />
                </leftShiftAssign>
            </block>
        </body>
    </lambda>
</expression>